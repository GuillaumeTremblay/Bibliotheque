<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <!-- ========== Action mapping definitions ===================================== -->
  <action-mappings>
    <!-- ========== View all livres ============================================== -->
    <action path="/layout/viewAllLivres"
            type="ca.qc.collegeahuntsic.bibliotheque.struts.action.Action">
            <forward name="success"
                     module="/WEB-INF/jsp/livreManagement/viewAllLivres"
                     path="/layout/viewAllLivres.jsp">
            </forward>
    </action>

    <!-- ========== View body ===================================================== -->
    <action path="/layout/viewBody"
            type="ca.qc.collegeahuntsic.bibliotheque.struts.action.Action">
            <forward name="success"
                     module="/WEB-INF/jsp/livreManagement/viewAllLivres"
                     path="/layout/viewBody.jsp">
            </forward>
    </action>
  </action-mappings>
</struts-config>
